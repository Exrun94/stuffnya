{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./src",
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "paths": {
    "@node_modules/localbase": ["types/localbase.d.ts"],
    "@node_modules/react-light-notifications": ["types/react-light-notifications.d.ts"],
    "src/renderer/quill.global.css": ["src/renderer/quill.global.css"]
  },
  "include": ["src/**/*", "types", "assets/icons", "assets/assets.d.ts", "src/renderer/types/index.d.ts", "jsconfig.json"],
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
